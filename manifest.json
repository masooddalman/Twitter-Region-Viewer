{
  "name": "Twitter Region Viewer",
  "description": "Displays 'Account based in' and 'Connected via' information next to usernames on X (Twitter) posts.",
  "version": "1.2",
  "manifest_version": 3,
  "permissions": [
    "declarativeNetRequest",
    "storage"
  ],
  "host_permissions": [
    "https://twitter.com/*",
    "https://x.com/*"
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "https://twitter.com/*",
        "https://x.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}